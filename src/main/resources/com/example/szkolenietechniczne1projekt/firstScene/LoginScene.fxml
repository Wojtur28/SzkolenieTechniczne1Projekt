<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="mainAnchor" prefHeight="600.0" prefWidth="670.0" stylesheets="@../../../../styles/mainStyle.css" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.szkolenietechniczne1projekt.controllers.LoginController">
   <VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="100.0">
      <padding>
         <Insets top="10.0"/>
      </padding>
      <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#changeSceneToRegister"
              prefHeight="50.0" prefWidth="56.0" stylesheets="@../../../../styles/mainStyle.css">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
         </VBox.margin>
         <graphic>
            <FontAwesomeIconView fill="WHITE" glyphName="PENCIL" size="40"/>
         </graphic>
      </Button>
      <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#closeApp" prefHeight="51.0"
              prefWidth="56.0" stylesheets="@../../../../styles/mainStyle.css">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
         </VBox.margin>
         <graphic>
            <FontAwesomeIconView fill="WHITE" glyphName="REMOVE" size="40"/>
         </graphic>
      </Button>
   </VBox>
   <Label alignment="CENTER" layoutX="169.0" layoutY="14.0" prefHeight="50.0" prefWidth="352.0" text="Logowanie" textAlignment="CENTER" textFill="WHITE">
      <font>
         <Font name="Roboto Regular" size="43.0" />
      </font>
   </Label>
   <VBox layoutX="225.0" layoutY="100.0" prefHeight="400.0" prefWidth="240.0">
      <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="32.0" prefWidth="240.0" text="Nazwa użytkownika" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font name="Roboto" size="25.0" />
         </font>
      </Label>
      <TextField fx:id="usernameField" />
      <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="32.0" prefWidth="240.0" text="Hasło" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font name="Roboto" size="25.0" />
         </font>
      </Label>
      <TextField fx:id="passwordField" />
      <Label prefHeight="25.0" prefWidth="240.0" />
      <Button mnemonicParsing="false" onAction="#login" prefHeight="35.0" prefWidth="240.0" text="Zaloguj">
         <font>
            <Font name="Roboto" size="18.0" />
         </font>
      </Button>
   </VBox>

</AnchorPane>
